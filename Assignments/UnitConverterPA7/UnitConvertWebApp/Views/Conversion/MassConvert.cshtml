@{
    ViewData["Title"] = "Mass Converter Home Page";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
<div class="row">    
    <div class="col-xs-4"></div>
        <div class="col-xs-4">
        <form action="MassConvert" method="post">
            <div class="form-group">
                <label for="numIn">Enter Mass: </label>
                <input type="text" class="form-control" id="numIn" name="numIn">
            </div>
            <div class="form-group">
                <label for="type">Conversion Type:</label>
                <select class="form-control" id="type" name="type">
                    <option value="o2p">Oz to Lb</option>
                    <option value="p2o">Lb to Oz</option>
                    <option value="o2g">Oz to G</option>
                    <option value="g2o">G to Oz</option>
                    <option value="o2k">Oz to Kg</option>
                    <option value="k2o">Kg to Oz</option>
                    <option value="p2g">Lb to G</option>
                    <option value="g2p">G to Lb</option>
                    <option value="p2k">Lb to Kg</option>
                    <option value="k2p">Kg to Lb</option>
                    <option value="g2k">G to K</option>
                    <option value="k2g">K to G</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Convert</button>
            </div>
            <h3 style="float: right">@ViewData["result"]</h3>
        </form>
        </div>
        <div class="col-xs-4"></div>
</div><!-- end of row -->
</div><!-- end of container -->
   