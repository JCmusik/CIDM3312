@{
    ViewData["Title"] = "Length Converter Home Page";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
<div class="row">    
    <div class="col-xs-4"></div>
        <div class="col-xs-4">
        <form action="LengthConvert" method="post">
            <div class="form-group">
                <label for="numIn">Enter Length: </label>
                <input placeholder=@ViewData["numIn"] type="text" class="form-control" id="numIn" name="numIn">
            </div>
            <div class="form-group">
                <label for="type">Conversion Type:</label>
                <select class="form-control" id="type" name="type">
                    <option value="m2f">Meters to Feet</option>
                    <option value="f2m">Feet to Meters</option>
                    <option value="m2y">Meters to Yards</option>
                    <option value="y2m">Yards to Meters</option>
                    <option value="f2y">Feet to Yards</option>
                    <option value="y2f">Yards to Feet</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Convert</button>
            </div>
            <h2 style="float: right">Converts to: @ViewData["result"]</h2>
        </form>
        </div>
        <div class="col-xs-4"></div>
</div><!-- end of row -->
</div><!-- end of container -->
    