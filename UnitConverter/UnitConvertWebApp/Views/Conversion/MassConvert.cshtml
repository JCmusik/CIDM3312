@{
    ViewData["Title"] = "Mass Converter Home Page";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
<div class="row">    
    <div class="col-xs-4"></div>
        <div class="col-xs-4">
        <form action="TempConvert" method="post">
            <div class="form-group">
                <label for="numIn">Enter Mass: </label>
                <input placeholder=@ViewData["numIn"] type="text" class="form-control" id="numIn" name="numIn">
            </div>
            <div class="form-group">
                <label for="type">Conversion Type:</label>
                <select class="form-control" id="type" name="type">
                    <option>Oz to Lb</option>
                    <option>Lb to Oz</option>
                    <option>Oz to G</option>
                    <option>G to Oz</option>
                    <option>Oz to Kg</option>
                    <option>Kg to Oz</option>
                    <option>Lb to G</option>
                    <option>G to Lb</option>
                    <option>Lb to Kg</option>
                    <option>Kg to Lb</option>
                    <option>G to K</option>
                    <option>K to G</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Convert</button>
            </div>
            <h2 style="float: right">Converts to: @ViewData["result"]</h2>
        </form>
        </div>
        <div class="col-xs-4"></div>
</div><!-- end of row -->
</div><!-- end of container -->
   