@{
    ViewData["Title"] = "Temperature Converter Home Page";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
<div class="row">    
    <div class="col-xs-4"></div>
        <div class="col-xs-4">
        <form action="TempConvert" method="post">
            <div class="form-group">
                <label for="numIn">Enter Temperature: </label>
                <input placeholder=@ViewData["numIn"] type="text" class="form-control" id="numIn" name="numIn">
            </div>
            <div class="form-group">
                <label for="type">Conversion Type:</label>
                <select class="form-control" id="type" name="type">
                    <option value="c2f">Celsius to Fahrenheit</option>
                    <option value="f2c">Fahrenheit to Celsius</option>
                    <option value="c2k">Celsius to Kelvin</option>
                    <option value="k2c">Kelvin to Celsius</option>
                    <option value="f2k">Fahrenheit to Kelvin</option>
                    <option value="k2f">Kelvin to Fahrenheit</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Convert</button>
            </div>
            <h2 style="float: right">Converts to: @ViewData["result"]</h2>
        </form>
        </div>
        <div class="col-xs-4"></div>
</div><!-- end of row -->
</div><!-- end of container -->