@{
    ViewData["Title"] = "Ceiling";
}

<h1>@ViewData["Title"]</h1>
<p>Enter a decimal number to see how Math.Ceiling works</p>
<div class="container">
<div class="row">    
    <div class="col-xs-4"></div>
        <div class="col-xs-4">
        <form action="Ceiling" method="post">
            <div class="form-group">
                <label for="num1">Enter Number 1: </label>
                <input type="text" class="form-control" id="num1" name="num1">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Ceiling</button>
            </div>
            <div class="form-group">
                <hr />
                <h3 style="float: right">@ViewData["result"]</h3>
            </div>
        </form>
        </div>
        <div class="col-xs-4"></div>
</div><!-- end of row -->
</div><!-- end of container -->